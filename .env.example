GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
GOOGLE_DRIVE_FOLDER_ID="your-google-drive-folder-id"
GOOGLE_DOCS_TEMPLATE_ID="your-google-docs-template-id"
